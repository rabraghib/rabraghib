{
  "hosting": [
    {
      "target": "portfolio",
      "public": "dist/projects/portfolio",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "headers": [
        {
          "source": "/*.@(js|css)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public,max-age=31536000,immutable"
            }
          ]
        },
        {
          "source": "/@(ngsw-worker.js|ngsw.json)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "no-cache"
            }
          ]
        }
      ],
      "rewrites": [
        {
          "source": "/**/!(*.@(js|ts|html|css|json|svg|png|jpg|jpeg))",
          "destination": "/index.html"
        }
      ]
    }
  ]
}
